<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vardea.blog.mapper.TagMapper">

    <resultMap id="tagResultMap" type="Tag">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="blogs" column="id" ofType="Blog"
                    select="com.vardea.blog.mapper.BlogMapper.getBlog"/>
    </resultMap>

    <insert id="saveTag"></insert>
    <delete id="removeTag"></delete>
    <update id="updateTag"></update>
    <select id="getTag" resultType="Tag"></select>
    <select id="listTag" resultType="Tag"></select>

    <select id="getTagByBlog" resultMap="tagResultMap">
        SELECT *
        FROM t_tag tt
        JOIN t_blog_tags tbt ON tt.id = tbt.tag_id
        WHERE tbt.blog_id = #{id}
    </select>
</mapper>
